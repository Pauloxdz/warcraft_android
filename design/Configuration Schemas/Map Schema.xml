<?xml version="1.0" encoding="UTF-8"?>
<map>
	<!-- Map Identifier: -->
	<!--  - Begins with m, followed by a unique number. -->
	<!--  - Must be unique within maps -->
	<id>m1</id>
	
	<!-- Map Name: -->
	<!--  - The human readable name fo the map. -->
	<name>The shores of shadowpine</name>
	
	<!-- Map Width: -->
	<!--  - The width of the map specified in tiles. -->
	<width>3</width>
	
	<!-- Map Height: -->
	<!--  - The height of the map, specified in tiles. -->
	<height>3</height>
	
	<tps>
		<tp>
			<!-- Texture Pack Identifier: -->
			<!--  - Begins with tp, followed by a number. -->
			<!--  - Must be unique within texture packs. -->
			<id>tp1</id>
			
			<!-- Texture Pack Filepath: -->
			<!--  - Name of the file containing the texture. -->
			<!--  - Root resolved to application directory. -->
			<filepath>winter.png</filepath>
		</tp>
		
		<!-- More texture packs -->
	</tps>
	
	<txs>
		<tx>
			<!-- Texture Identifier: -->
			<!--  - Begins with tx, followed by a number -->
			<!--  - Must be unique with in textures. -->
			<id>tx1</id>
			
			<!-- Texture Pack Identifier: -->
			<!--  - Texture pack id specified above -->
			<tp_id>tp1</tp_id>
			
			<!-- Texture coordinates: -->
			<!--  - First int pair specifes the start pixel of the texture. -->
			<!--  - Second int pair specifes the size of the texture. -->		 
			<coords>0,0,32,32</coords>
		</tx>
		
		<!-- More textures -->
	</txs>

	<tiles>
		<tile>
			<id>t1</id>
			<type></type>
			<value></value>
			<alive_tx>tx1</alive_tx>
			<dead_tx>tx2</dead_tx>
		</tile>
	</tiles>

	<!-- Tile placements: -->
	<!--  - A list of tile ids. -->
	<!--  - Tile ids are specified in rows, one after each other. -->
	<!--  - There should be height number of rows, each with width number of tile ids. -->
	<content>t1,t1,t1,t2,t2,t2,t3,t3,t3</content>
</map>